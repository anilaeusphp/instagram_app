<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="images-section pt-3 d-none d-lg-block"></div>
  <div class="login-section pt-3">
    <div class="card text-center pt-5" style="width: 23rem;">
      <%= image_tag 'logo.png', class: "card-img-top" %>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3 mt-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" , placeholder: "Enter your email"%>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" ,placeholder: "Enter your password"%>
          </div>
          <%= f.submit "Log in", class: "form-control btn btn-primary d-block" %>

          <div class="d-flex align-items-center mt-4">
            <div class="line"></div>
            <div class="line-text">OK</div>
            <div class="line"></div>
          </div>
          <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
            <%= image_tag "facebook.png", class: "facebook" %> Login with Facebook
          </a>
          <a href="#" class="fs-6 d-block my-4 text-decoration-none">Forgot Password?</a>
          </div>
          </div>
        <% end %>
        <div class="card text-center py-2 mt-3" style="width: 23rem;">
          <div class="card-text">
            Don't have an account?
            <%= link_to "Sign Up", new_user_registration_path, class: "fs-6 my-4 text-decoration-none" %>
          </div>
        </div>
        </div>
</div>